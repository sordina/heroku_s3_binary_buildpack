#!/bin/bash

set -e

# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

location=$(cat $BUILD_DIR/heroku_binary_location )

echo "Got Location: $location"

filename=$(basename $location)

echo "Got Basename: $filename"

mkdir -p $CACHE_DIR
if [ -f $CACHE_DIR/$filename ]
then
	echo "using cached artifact"
else
	echo "downloading artifact"
	curl $location > $CACHE_DIR/$filename
fi

echo cached binary
file $CACHE_DIR/$filename

mkdir -p /vendor/heroku_binaries
cp $CACHE_DIR/$filename /vendor/heroku_binaries/latest_heroku_binary
echo copied binary
file /vendor/heroku_binaries/latest_heroku_binary

chmod 755 /vendor/heroku_binaries/latest_heroku_binary
echo weaponised binary
ls -l /vendor/heroku_binaries/latest_heroku_binary
